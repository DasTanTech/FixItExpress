<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    tools:context=".bookingProcess.appointmentDetails">

    <TextView
        android:id="@+id/bp6_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/_20sdp"
        android:text="When would you like your service?"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/bp6_dates_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bp6_header"
        android:layout_weight="4"
        android:orientation="horizontal">

       <TextView
           android:id="@+id/bp6_date"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Click Here To Select Date"
           android:textStyle="bold"
           android:textSize="@dimen/_18sdp"
           android:textColor="@color/colorBlack"
           android:gravity="center"
           android:layout_margin="@dimen/_10sdp"/>


    </LinearLayout>

    <TextView
        android:padding="@dimen/_10sdp"
        android:id="@+id/bp6_covidTxt"
        android:layout_below="@id/bp6_dates_layout"
        android:textColor="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Due to COVID-19 Outbreak, Visit date may change."
        android:textStyle="bold"
        android:textSize="@dimen/_11sdp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bp6_covidTxt">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/header"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Time"
                android:layout_margin="@dimen/_10sdp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"/>

            <LinearLayout

                android:id="@+id/bp6_timeMrgLayout"
                android:layout_below="@id/header"
                android:padding="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Morning"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_13sdp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/bp6_timeMRG1"
                    android:layout_margin="2dp"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/bp6_time1"
                        android:layout_gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00 AM - 12:00 PM"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13sdp" />


                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/bp6_timeAFTLayout"
                android:layout_below="@id/bp6_timeMrgLayout"
                android:padding="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Afternoon"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_13sdp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/bp6_timeAFT1"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/bp6_time2"
                        android:layout_gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12:00 PM - 2:00 PM"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13sdp" />


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/bp6_timeAFT2"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/bp6_time3"
                        android:layout_gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2:00 PM - 4:00 PM"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13sdp" />


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/bp6_timeAFT3"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:id="@+id/bp6_time4"
                        android:layout_gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4:00 PM - 6:00 PM"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13sdp" />


                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/bookingProcess_mainBtnLayout"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@color/colorWhite">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorWhite"/>

        <Button
            android:id="@+id/appointmentDetails_mainBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_10sdp"
            android:text="Next   "
            android:drawableRight="@drawable/ic_rightarrow"
            android:background="@drawable/btn_bg2"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:paddingStart="@dimen/_50sdp"
            android:paddingEnd="@dimen/_50sdp"
            android:textSize="@dimen/_16sdp"/>

    </RelativeLayout>

</RelativeLayout>