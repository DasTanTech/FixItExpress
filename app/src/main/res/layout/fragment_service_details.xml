<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".bookingProcess.serviceDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bp2_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Your Service"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_22sdp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="@dimen/_50sdp"
                />

            <View
                android:id="@+id/v1"
                android:layout_below="@id/bp2_header"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"/>

            <RelativeLayout
                android:layout_below="@id/v1"
                android:id="@+id/bp2_optionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RadioGroup

                    android:id="@+id/bp2_radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_15sdp"
                    >

                    <RadioButton
                        android:id="@+id/RD2_1"
                        android:padding="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Not Starting"
                        android:textStyle="bold"
                        android:textSize="@dimen/_18sdp"
                        android:textColor="@color/colorBlack"
                        android:buttonTint="@color/colorPrimary"
                        android:checked="true"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorPrimary"/>

                    <RadioButton
                        android:id="@+id/RD2_2"
                        android:padding="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Any Leakage Problem"
                        android:textStyle="bold"
                        android:textSize="@dimen/_18sdp"
                        android:buttonTint="@color/colorPrimary"
                        android:textColor="@color/colorBlack"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorPrimary"/>

                    <RadioButton
                        android:id="@+id/RD2_3"
                        android:padding="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Power Supply"
                        android:textStyle="bold"
                        android:textSize="@dimen/_18sdp"
                        android:buttonTint="@color/colorPrimary"
                        android:textColor="@color/colorBlack"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/colorPrimary"/>

                    <RadioButton
                        android:id="@+id/RD2_4"
                        android:padding="@dimen/_15sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Other Issues"
                        android:textStyle="bold"
                        android:textSize="@dimen/_18sdp"
                        android:buttonTint="@color/colorPrimary"
                        android:textColor="@color/colorBlack"
                        />



                </RadioGroup>

            </RelativeLayout>

            <View
                android:id="@+id/vfinal"
                android:layout_below="@id/bp2_optionLayout"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"/>









        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/bookingProcess_mainBtnLayout"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@color/colorWhite">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorWhite"/>

        <Button
            android:id="@+id/serviceDetails_mainBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_10sdp"
            android:text="Next   "
            android:drawableRight="@drawable/ic_rightarrow"
            android:background="@drawable/btn_bg2"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            android:paddingStart="@dimen/_50sdp"
            android:paddingEnd="@dimen/_50sdp"
            android:textSize="@dimen/_16sdp"/>

    </RelativeLayout>

</RelativeLayout>