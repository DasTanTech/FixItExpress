<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".bookingPage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bookingProcess_mainToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:title="Service Name"
        app:titleMarginStart="@dimen/_50sdp"
        app:titleTextColor="@color/colorWhite"
        />

    <RelativeLayout
        android:id="@+id/bookingProcess_mainTopLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">



        <LinearLayout
            android:id="@+id/bookingProcess_topBar_backBtn"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5sdp"/>

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bookingProcess_mainToolBar"

        android:id="@+id/bookingProcess_mainFrameLayout"/>



    <RelativeLayout
        android:id="@+id/blurLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50FFFFFF"
        android:visibility="gone">

    </RelativeLayout>

</RelativeLayout>